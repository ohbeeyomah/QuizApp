<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".QuestionsActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_16"
                app:cardCornerRadius="@dimen/size_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/size_16"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/number1"
                        style="@style/BlackNBoldText"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height= "wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/question1"
                        style="@style/BlackNBoldText"/>
                    <RadioGroup
                        android:id="@+id/qtn1_radio_grp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/qtn1_btn_true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/regular_text_size"
                            android:text="@string/qtn1_btn_true"/>
                        <RadioButton
                            android:id="@+id/qtn1_btn_false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/regular_text_size"
                            android:text="@string/qtn1_btn_false" />
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_16"
                app:cardCornerRadius="@dimen/size_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/size_16"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/number2"
                        style="@style/BlackNBoldText"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/question2"
                        style="@style/BlackNBoldText"/>
                    <CheckBox
                        android:id="@+id/qtn2_criminal_law"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:textSize="@dimen/regular_text_size"
                        android:text="@string/qtn2_criminal_law"/>
                    <CheckBox
                        android:id="@+id/qtn2_market_law"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/qtn2_market_law"
                        android:textSize="@dimen/regular_text_size"/>
                    <CheckBox
                        android:id="@+id/qtn2_family_law"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/qtn2_family_law"
                        android:textSize="@dimen/regular_text_size"/>
                    <CheckBox
                        android:id="@+id/qtn2_ground_law"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/qtn2_ground_law"
                        android:textSize="@dimen/regular_text_size"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_16"
                app:cardCornerRadius="@dimen/size_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/size_16">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/number3"
                        style="@style/BlackNBoldText"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/question3"
                        style="@style/BlackNBoldText"/>
                    <EditText
                        android:id="@+id/qtn3_edit_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text|textNoSuggestions"
                        android:focusableInTouchMode="true"
                        android:hint="@string/qtn5_answer"
                        android:textSize="@dimen/regular_text_size"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_16"
                app:cardCornerRadius="@dimen/size_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/size_16"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/number4"
                        style="@style/BlackNBoldText"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/question4"
                        style="@style/BlackNBoldText"/>
                    <RadioGroup
                        android:id="@+id/qtn4_radiogrp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/qtn4_btn_blank_slates"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn4_blank_slates"
                            android:textSize="@dimen/regular_text_size"/>
                        <RadioButton
                            android:id="@+id/qtn4_btn_laymen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn4_laymen"
                            android:textSize="@dimen/regular_text_size"/>
                        <RadioButton
                            android:id="@+id/qtn4_btn_idiots"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn4_idiots"
                            android:textSize="@dimen/regular_text_size"/>
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_16"
                app:cardCornerRadius="@dimen/size_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/size_16">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/number5"
                        android:gravity="center_vertical"
                        style="@style/BlackNBoldText"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/question5"
                        style="@style/BlackNBoldText"/>
                    <EditText
                        android:id="@+id/qtn5_edit_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/qtn5_answer"
                        android:textSize="@dimen/regular_text_size"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_16"
                app:cardCornerRadius="@dimen/size_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/size_16"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/number6"
                        style="@style/BlackNBoldText"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/question6"
                        style="@style/BlackNBoldText"/>
                    <RadioGroup
                        android:id="@+id/qtn6_radiogrp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/qtn6_btn_more_you_look"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn6_more_you_look"
                            android:textSize="@dimen/regular_text_size"/>
                        <RadioButton
                            android:id="@+id/qtn6_btn_seeing_is"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn6_seeing_is"
                            android:textSize="@dimen/regular_text_size"/>
                        <RadioButton
                            android:id="@+id/qtn6_btn_facts_speak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn6_the_facts_speak"
                            android:textSize="@dimen/regular_text_size"/>
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_16"
                app:cardCornerRadius="@dimen/size_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/size_16"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/number7"
                        style="@style/BlackNBoldText"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/question7"
                        style="@style/BlackNBoldText"/>
                    <RadioGroup
                        android:id="@+id/qtn7_radiogrp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/qtn7_btn_court"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn7_court"
                            android:textSize="@dimen/regular_text_size"/>
                        <RadioButton
                            android:id="@+id/qtn7_btn_bazaar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn7_bazaar"
                            android:textSize="@dimen/regular_text_size"/>
                        <RadioButton
                            android:id="@+id/qtn7_btn_hearing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn7_hearing"
                            android:textSize="@dimen/regular_text_size"/>
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_16"
                app:cardCornerRadius="@dimen/size_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/size_16"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/number8"
                        style="@style/BlackNBoldText"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/question8"
                        style="@style/BlackNBoldText"/>
                    <RadioGroup
                        android:id="@+id/qtn8_radiogrp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/qtn8_complainant"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn8_complainant"
                            android:textSize="@dimen/regular_text_size"/>
                        <RadioButton
                            android:id="@+id/qtn8_plaintiff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn8_plaintiff"
                            android:textSize="@dimen/regular_text_size"/>
                        <RadioButton
                            android:id="@+id/qtn8_protestant"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn8_protestant"
                            android:textSize="@dimen/regular_text_size"/>
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_16"
                app:cardCornerRadius="@dimen/size_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/size_16"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/number9"
                        style="@style/BlackNBoldText"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/question9"
                        style="@style/BlackNBoldText"/>
                    <CheckBox
                        android:id="@+id/qtn9_liar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/qtn9_liar"
                        android:textSize="@dimen/regular_text_size"/>
                    <CheckBox
                        android:id="@+id/qtn9_legal_practitioner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/qtn9_legal_practitioner"
                        android:textSize="@dimen/regular_text_size"/>
                    <CheckBox
                        android:id="@+id/qtn9_chatterbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/qtn9_chatterbox"
                        android:textSize="@dimen/regular_text_size"/>
                    <CheckBox
                        android:id="@+id/qtn9_advocate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/qtn9_advocate"
                        android:textSize="@dimen/regular_text_size"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_16"
                app:cardCornerRadius="@dimen/size_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/size_16">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/number10"
                        android:gravity="center_vertical"
                        style="@style/BlackNBoldText"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/question10"
                        style="@style/BlackNBoldText"/>
                    <EditText
                        android:id="@+id/qtn10_edit_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:focusableInTouchMode="true"
                        android:hint="@string/qtn10_answer"
                        android:textSize="@dimen/regular_text_size"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <Button
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/submit_btn"
                android:background="@color/colorAccent"/>
            <Button
                android:id="@+id/answer_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="@string/answer_btn"/>
        </LinearLayout>
    </ScrollView>